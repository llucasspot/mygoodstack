{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
