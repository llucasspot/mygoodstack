{
  "name": "@mygoodstack/monorepo",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=21.7.3"
  },
  "packageManager": "pnpm@8.10.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky install",
    "demo:react": "cd examples/react-demo && pnpm install && pnpm dev",
    "demo:build": "cd examples/react-demo && pnpm build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.0.0"
    }
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ]
}
